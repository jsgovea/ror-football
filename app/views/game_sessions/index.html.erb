<section id="login" class="p-4 flex flex-col justify-center h-full max-w-md mx-auto" data-controller="game-session" data-game-session-teams="<%= @teams.to_json %>">
  <div class="p-6 bg-sky-100 rounded">
    <div class="flex items-center justify-center font-black m-3 mb-12">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mr-3 text-red-600 animate-pulse" viewBox="0 0 20 20"
        fill="currentColor">
        <path fill-rule="evenodd"
          d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
          clip-rule="evenodd" />
      </svg>
      <h1 class="tracking-wide text-3xl text-gray-900">Create new game</h1>
    </div>
    <%= form_with(
        model: @game_session,
        url: game_sessions_create_path,
        class: 'flex flex-col justify-center'
    ) do |form| %>
      <div>
        <div class="col-span-6 sm:col-span-3">
          <%= form.label :league, class: 'block text-sm font-medium text-gray-700' %>
          <%= select_tag :league_id, options_for_select([["Select a league", "", { disabled: true, selected: true }]] + @leagues.map { |league| [league.name, league.id] }), required: true, autofocus: true, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", data: { action: 'change->game-session#changeLeague' } %>
        </div>
      </div>
      <div class="mt-2">
        <div class="col-span-6 sm:col-span-3">
          <%=form.label :team, class: 'block text-sm font-medium text-gray-700' %>
          <%= select_tag :team_id, options_for_select(["Select a team"], selected: nil, disabled: "Select an option"), class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", data: { target: "game-session.teamSelect" } %>
        </div>
      </div>
      <%= link_to "Continue", play_home_index_path, class: "px-4 py-2 mt-4 rounded-md shadow-lg bg-gradient-to-r from-pink-600 to-red-600 font-medium text-gray-100 block transition duration-300 text-center	" %>
    <% end %>
  </div>
</section>
